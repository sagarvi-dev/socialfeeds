= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "form-horizontal"}) do |f|
  = devise_error_messages!
  %fieldset
    %legend
      = t('signup.create_account')
    .form-group
      %label.col-lg-2.control-label
      .col-lg-10
        - if alert.present?
          .alert.alert-dismissible.alert-danger
            %button.close{"data-dismiss" => "alert", :type => "button"}
            %a.alert-link{:href => "#"}
              = alert

              
    
    .form-group{:class => (resource.errors["email"].any? ? "has-error" : '')}
      %label.col-lg-2.control-label{:for => "inputEmail"} Email
      .col-lg-10
        = f.email_field :email, autofocus: true, placeholder: 'signup email', :class => "form-control"
        - if resource.errors["email"].any?
          .errorMsg
            = resource.errors["email"][0]
    .form-group{:class => (resource.errors["password"].any? ? "has-error" : '')}
      %label.col-lg-2.control-label{:for => "inputPassword"} Password
      .col-lg-10
        = f.password_field :password, autofocus: true, placeholder: 'signup password', :class => "form-control"
        - if resource.errors["password"].any?
          .errorMsg
            = resource.errors["password"][0]

    .form-group{:class => (resource.errors["password_confirmation"].any? ? "has-error" : '')}
      %label.col-lg-2.control-label{:for => "inputPassword"} Confirm Password
      .col-lg-10
        = f.password_field :password_confirmation, autocomplete: "off", placeholder: 'confirm password', :class => "form-control"
        - if resource.errors["password_confirmation"].any?
          .errorMsg
            = resource.errors["password_confirmation"][0]     

    .form-group
      .col-lg-10.col-lg-offset-2  
        = f.submit "Sign up",:class => "btn btn-success",:name => "login"